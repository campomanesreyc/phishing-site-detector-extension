{
  "manifest_version": 3,
  "name": "Phishingscape",
  "version": "1.0.1",
  "action": {
    "default_icon": {
      "16": "./icons/icon-16.png",
      "32": "./icons/icon-32.png",
      "48": "./icons/icon-48.png",
      "128": "./icons/icon-128.png"
    },
    "default_popup": "./popup/popup.html"
  },
  "description": "Scanning websites in real-time to determine if they are phishing sites or not.",
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "128": "./icons/icon-128.png"
  },
  "author": {
    "email": "phishingscape@gmail.com"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://phishing-site-detector.onrender.com/predict"],
  "permissions": ["declarativeNetRequest", "storage", "tabs", "webNavigation"]
}
